<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:id="@+id/cardFilm"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_filmimage"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="20dp"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_namafilm"
            android:text="Nama Film"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/iv_filmimage"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_overview"
            android:text="Ulasan"
            android:textSize="17sp"
            android:layout_toEndOf="@+id/iv_filmimage"
            android:layout_below="@+id/tv_namafilm"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:id="@+id/favorites_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_overview"
            android:layout_alignParentRight="true"
            android:button="@drawable/ic_baseline_delete_24" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>
